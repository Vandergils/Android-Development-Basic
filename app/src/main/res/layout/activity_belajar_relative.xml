<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BelajarRelativeActivity">

    <TextView
        android:id="@+id/kiriAtas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left up"
        android:textAllCaps="true"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/tengahTengah"
        />

    <TextView
        android:id="@+id/kananAtas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right up"
        android:textAllCaps="true"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/tengahTengah"
        />

    <TextView
        android:id="@+id/tengahAtas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="middle up"
        android:textAllCaps="true"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tengahTengah"
        />

    <TextView
        android:id="@+id/kiriTengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left center"
        android:textAllCaps="true"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:id="@+id/tengahTengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="center"
        android:textAllCaps="true"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/kananTengah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right center"
        android:textAllCaps="true"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/kiriBawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="left bot"
        android:textAllCaps="true"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/tengahBawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="middle bot"
        android:textAllCaps="true"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/kananBawah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="right bot"
        android:textAllCaps="true"
        android:textColor="#D32F2F"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>